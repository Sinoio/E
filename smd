local rm = game:GetService("ReplicatedStorage"):WaitForChild("RemoteEvent")
game.Players.PlayerAdded:Connect(function(p)
rm:FireClient(p, 
[[

game:GetService("TextChatService").ChatWindowConfiguration:Destroy()
game:GetService("TextChatService").ChatInputBarConfiguration:Destroy()

local sg = Instance.new("ScreenGui")
local fr = Instance.new("Frame")
fr.Position = UDim2.fromScale(0.5, 0.5)
fr.Size = UDim2.fromScale(0.2, 0.2)
sg.Enabled = false
sg.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
fr.Parent = sg

game:GetService("RunService").Heartbeat:Connect(function()
    sg.Enabled = game.StarterGui:GetCore("ChatActive")
end)

]])
end)